<div class="clearfix top-space small"></div>
<div class="row">

  <%= render :partial => 'shared/left_nav' %>

  <div class="panel panel-default col-md-8 text-left">
    <div class="pull-left">
      <h4>Who <%= @user.name %> follows</h4>
      <p class="text-muted">Twetter accounts in alpabetical order.</p>
    </div>
    <div class="clearfix"></div>
    <hr />
    <ol class="list-unstyled">
      <% @users.each do |user| %>
      <li>
        <strong class="pull-left text-middle"><%= link_to user.name, user_profile_path(user.username) %></strong>
        <span class="text-muted pad-10 text-middle">
        </span>
        <%= follow_link(user) %>
        <div class="clearfix"></div>
      </li>
      <li><hr></li>
      <% end -%>
    </ol>
  </div>
</div>
